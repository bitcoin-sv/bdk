        //For go run on MacOS,"CGO_LDFLAGS":"-L${env:BDK_INSTALL_ROOT}/lib -L${env:BDK_INSTALL_ROOT}/bin -Wl,-rpath,${env:BDK_INSTALL_ROOT}/bin ${env:CGO_LDFLAGS}"
